
*
	font-family: Courier

a
	display:inline-block
	padding: 4px 8px
	color: #4CC

	&:hover
		background: rgba(255,255,255 0.7)

body
	font-size: 20px
	background: #eee

#page
	width: 60%
	margin: auto
	padding-top:100px

h1,h2
	font-weight: 100

h1
	color:blue
	font-size:50px
	// text-shadow:none

	a
		border: none
		border-radius: 0px


// Forms

input
	font-size: 20px
	margin: 5px 0px
	border:1px solid #333
	border-radius: 4px
	background: white
	color:black
	padding: 4px 8px
	&:focus
		box-shadow: 0px 0px 3px #05a
		border-color:#05a


input[type=submit], button
	margin-top:10px
	border-radius: 8px
	text-align: center
	padding: 4px 8px
	border:1px solid #333
	outline: none

// Messages

.message_sender::before
	content: '-- '
.message_receiver::before
	content: '>> '

// Flash

.flash
	border: 4px solid black
	border-radius: 1000
	-webkit-border-radius: 1000
	color:white
	padding:10px
	margin:10px
	text-shadow: none

.flash_success
	border-color: rgba(0,255,0, 1)
	background:	rgba(0,255,0, 0.3)

.flash_error
	border-color: rgba(255, 0,0, 1)
	background: rgba(255, 0,0, 0.3)

// Themes

.theme

	span
		border-radius: 20px

	.theme_image
		border-radius: 20px
		overflow:hidden
		border: 1px solid black
